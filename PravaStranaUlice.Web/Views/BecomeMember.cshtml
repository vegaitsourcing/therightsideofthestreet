@inherits UmbracoViewPage<BecomeMemberViewModel>


<main class="main">
    <h1 class="sr-only">Postani član</h1>

    <div class="bememe cover-bg" style="background-image: url('/images/content/sw-crews-bg.jpg')">
        <div class="wrap">
            <div class="content">
                <h2> @Model.Title</h2>
                <p>@Model.IntroText</p>
                <div class="membership-level">
                    @foreach (var item in Model.MembershipLevels)
                    {
                        <div class="sw-mem-lvl-box box-one">
                            <div class="sw-mem-box-top">
                                <span class="icon font-ico-user"></span>
                                <h1 class="h4">@item.Status</h1>
                            </div>
                            <div class="sw-mem-box-bottom">
                                <div class="box-bottom-top">
                                    @foreach (var x in item.Details.Split('\n'))
                                    {
                                        <p>@x</p>
                                    }
                                </div>
                                <div class="box-bottom-btn">
                                    <button type="button" class="btn btn-small" data-image="@item.Image.Url" >Izaberi</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @foreach (var item in Model.MembershipLevels)
                {
                    <div class="receipt-img" @if (Model.MembershipLevels.IndexOf(item) > 0) { <text> style="display:none" </text> }>
                        @RazorHelpers.RenderImage(item.Image)
                    </div>
                }
                @using (Html.BeginForm("BeMember", "BecomeMember", FormMethod.Post))
                {
                    <input type="text" name="name" placeholder="Ime" maxlength="24" title="Ime">
                    <input type="text" name="surname" placeholder="Prezime" maxlength="24" title="Prezime">
                    <input type="text" name="dob" placeholder="Datum i godina rođenja" maxlength="24" title="Datum rođenja dd/mm/yyyy">
                    <input type="text" name="nationality" placeholder="Državljanstvo" maxlength="24" title="Državljanstvo">
                    <input type="text" name="idcardnumber" placeholder="Broj ličnog dokumenta" maxlength="24" title="Broj ličnog dokumenta">
                    <input type="text" name="adress" placeholder="Adresa stanovanja" maxlength="24" title="Adresa stanovanja">
                    <input type="text" name="mblnumber" placeholder="Broj telefona" maxlength="24" title="Broj telefona">
                    <input type="email" name="e-mail" placeholder="E-mail" maxlength="24" title="Email adresa">
                    <p>+ Uploaduj sliku uplatnice</p>
                    <button class="btn" type="submit" name="submit" value="Postani član">Postani član</button>
                }
            </div>
        </div>
    </div>
</main>