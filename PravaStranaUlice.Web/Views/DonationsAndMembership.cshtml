@inherits UmbracoViewPage<PravaStranaUlice.Models.DonationsAndMembership>

<main class="main">
	@if (!string.IsNullOrEmpty(Model.Title))
	{

		<h1 class="sr-only">@Model.Title</h1>
	}


	<div class="module-about-us cover-bg" style="background-image: url('/../images/background-about-us.png');">

		<div class="wrap">
			<div class="about-us-heading">
				@if (!string.IsNullOrEmpty(Model.Title))
				{
					<h1 class="h2">@Model.Title title</h1>
				}
			</div>
			<div class="about-us-content">
				<div class="content-youtube">
					@if (Model.Video != null)
					{<div class="about-video">
							<iframe width="560" height="315" src="@Model.EmbedVideo" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
						</div>
					}

				</div>
				<div class="about-description">
					@if (!string.IsNullOrEmpty(Model.Text.ToString()))
					{
						@Html.Raw(Model.Text);
					}
				</div>
				<div class="blog-title-section">
					@foreach (var btn in Model.Buttons)
					{
						<a href="@btn.Url"><button class="btn btn-small" type="button">@btn.Name</button></a>
					}
				</div>
			</div>

		</div>

	</div>
</main>


