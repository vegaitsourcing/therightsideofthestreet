@using PravaStranaUlice.Web.Controllers.Surface.Partials
@inherits UmbracoViewPage<PageViewModel>
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="@Model.Language">
<head>
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="format-detection" content="telephone=no">
	<meta charset="utf-8">
	
	@{ 
		Html.RenderAction<LayoutController>(c => c.MetaTags(null), Model.MetaTags);
	}
	
	<!-- main css file -->
	<link rel="stylesheet" href="/css/dist/style.min.css">

	<!-- global js file -->
	<script defer type="text/javascript" src="/js/dist/global.min.js"></script>
	
	<link href="/favicon.ico" rel="icon" />
</head>
<body>
	<header class="header" role="banner">
		<div class="header-upper">
			<div class="wrap">
				<a class="header-links language-links" href="javascript:;" title="srpski jezik">Sr</a>
				<a class="header-links language-links" href="javascript:;" title="engleski jezik">En</a>
				<a class="header-links donations-link" href="javascript:;" title="donacije i članstvo">Donacije i članstvo<span class="icon font-ico-user"></span></a>
			</div>
		</div>
		<div class="wrap">
			<a class="logo" href="index.html" title="Prava Strana Ulice">
				<img src="/images/logo.png" alt="Prava Strana Ulice">
			</a>
			<nav class="main-nav" data-menu>
				<ul role="menubar">
					<li role="menuitem">
						<a class="header-links" href="javascript:;">O nama</a>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">SW atlete</a>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">SW ekipe</a>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">Kako početi sa vežbanjem</a>
						<ul class="secondary-nav">
							<li>
								<a class="header-links" href="javascript:;">Početni nivo</a>
							</li>
							<li>
								<a class="header-links" href="javascript:;">Napredni nivo</a>
							</li>
							<li>
								<a class="header-links" href="javascript:;">Profesionalni nivo</a>
							</li>
						</ul>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">Parkovi za vežbanje</a>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">Dešavanja</a>
					</li>
					<li role="menuitem">
						<a class="header-links" href="javascript:;">SW blog</a>
					</li>
				</ul>
				<ul class="main-nav-social-links">
					<li>
						<a href="">
							<span class="icon font-ico-facebook"></span>
							<span class="sr-only">Facebook</span>
						</a>
					</li>
					<li>
						<a href="">
							<span class="icon font-ico-instagram"></span>
							<span class="sr-only">Instagram</span>
						</a>
					</li>
					<li>
						<a href="">
							<span class="icon font-ico-youtube"></span>
							<span class="sr-only">Youtube</span>
						</a>
					</li>
				</ul>
				<button class="main-nav-close" type="button" data-menu-close>
					<span class="icon font-ico-close"></span>
					<span class="sr-only">Menu close</span>
				</button>
			</nav>
			<button class="main-nav-toggle" type="button" data-menu-toggle>
				<span class="icon font-ico-menu-toggle"></span>
				<span class="sr-only">Menu open</span>
			</button>
		</div>
	</header>
	<main class="main">
		@RenderBody()
	</main>
	<footer class="footer" role="contentinfo">
		<div class="wrap">
			<div class="footer-top">
				<div class="popular-blog">
					<div class="popular-blog-blog">
						<img src="/images/content/athlete-bodybuilding-exercise-931322.png">
					</div>
					<div class="popular-blog-heading">
						<h4>Amet</h4>
						<p>It is a long established fact that a reader will be distracted by the readable content or a page when looking at it's layout</p>
					</div>
				</div>
				<div class="newsletter">
					<h1 class="h3">Prijavite se na newsletter!</h1>
					<div class="newsletter-form">
						<input type="text" name="newsletter">
						<button class="btn btn-small" type="submit" name="submit" value="Prijavi-se">Prijavi se!</button>
					</div>
				</div>
			</div>
			<div class="footer-bottom">
				<div class="footer-nav">
					<div class="footer-nav-left">
						<ul>
							<li><a href="#">O nama</a></li>
							<li><a href="#">SW Atlete</a></li>
							<li><a href="#">Počni sa vežbanjem</a></li>
							<li><a href="#">SW Ekipe</a></li>
						</ul>
					</div>
					<div class="footer-nav-right">
						<ul>
							<li><a href="#">Parkovi za vežbanje</a></li>
							<li><a href="#">Dešavanja</a></li>
							<li><a href="#">SW Blog</a></li>
						</ul>
					</div>
				</div>
				<div class="footer-info">
					<div class="footer-info-contact">
						<h1 class="h3">Kontaktirajte nas!</h1>
						<a href="javascript:;">hello@pravastranaulice.com</a>
					</div>
					<div class="footer-info-contact-social-icons">
						<a href="javascript:;" target="_blank" title="Follow us on Facebook">
							<span class="icon font-ico-facebook"></span>
							<span class="sr-only">Facebook</span>
						</a>
						<a href="javascript:;" target="_blank" title="Follow us on Instagram">
							<span class="icon font-ico-instagram"></span>
							<span class="sr-only">Instagram</span>
						</a>
						<a href="javascript:;" target="_blank" title="Follow us on YouTube">
							<span class="icon font-ico-youtube"></span>
							<span class="sr-only">YouTube</span>
						</a>
					</div>
					<button class="go-to-top" type="button">
						<span class="icon font-ico-arrow-up"></span>
					</button>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>