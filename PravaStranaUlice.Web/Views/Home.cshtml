@inherits UmbracoViewPage<PravaStranaUlice.Models.Home>
<main class="main">
    <h1 class="sr-only">Prava Strana Ulice</h1>
    @if (Model.BannerImage != null)
    {
        <div class="banner">
            @if (!string.IsNullOrEmpty(Model.BannerImage.Url))
            {
                <div class="banner-img cover-bg" style="background-image: url('@Model.BannerImage.Url');"></div>}
            <div class="banner-content">
                <h2 class="h1">Suspendisse sed sollicitudin mauris</h2>
                @if (Model.BannerLink != null)
                {
                    <a class="btn" href="@Model.BannerLink.Url">@Model.BannerLink.Name</a>}
                <div class="banner-social-links">
                    @if (Model.Settings.FacebookLink != null)
                    {
                        <a href="@Model.Settings.FacebookLink.Url" target="_blank" title="@Model.Settings.FacebookLink.Name">
                            <span class="icon font-ico-facebook"></span>
                            <span class="sr-only">Facebook</span>
                        </a>
                    }
                    @if (Model.Settings.InstagramLink != null)
                    {
                        <a href="@Model.Settings.InstagramLink.Url" target="_blank" title="@Model.Settings.InstagramLink.Name">
                            <span class="icon font-ico-instagram"></span>
                            <span class="sr-only">Instagram</span>
                        </a>
                    }
                    @if (Model.Settings.YoutubeLink != null)
                    {
                        <a href="@Model.Settings.YoutubeLink.Url" target="_blank" title="@Model.Settings.YoutubeLink.Name">
                            <span class="icon font-ico-youtube"></span>
                            <span class="sr-only">YouTube</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    }

    <div class="intro">
        <div class="wrap">
            <h2>@Model.FirstIntroTitle</h2>
            @Model.FirstIntroText
        </div>
    </div>
    <div class="full-width-img">
        <img src="@Model.FirstIntroBannerImage.Url" alt="">
    </div>
    <div class="intro align-left">
        <div class="wrap">
            <h2>@Model.SecondIntroTitle</h2>
            <img src="@Model.SecondIntroImage.Url" alt="" align="right">
            @Model.SecondIntroText
            <a class="btn" href="@Model.SecondIntroLink.Url">@Model.SecondIntroLink.Name</a>
        </div>
    </div>

    <div class="sw-atlete cover-bg" style="background-image: url('/images/content/sw-atlete-bg.jpg')">
        <div class="wrap">
            <h2 class="centered color-white">Street workout atlete</h2>
            <div class="sw-atlete-list sw-atlete-slider">
                @foreach (Athlete athlete in Model.AthleteLandingPageCast.Children.OfType<Athlete>().Take(Model.AthleteLandingPageCast.ItemsPerPage))
                {
                    <div class="sw-atlete-item">
                        <a class="thumbnail cover-bg" href="javascript:;" style="background-image: url('@athlete.ProfileImage.Url')"></a>
                        <div class="sw-atlete-info">
                            <h4><a href="javascript:;">@athlete.Title</a></h4>
                            <div class="sw-social">
                                <a href="@athlete.FacebookUrl" target="_blank" title="Follow @athlete.Title on Facebook">
                                    <span class="icon font-ico-facebook"></span>
                                    <span class="sr-only">Facebook</span>
                                </a>
                                <a href="@athlete.InstagramUrl" target="_blank" title="Follow @athlete.Title on Instagram">
                                    <span class="icon font-ico-instagram"></span>
                                    <span class="sr-only">Instagram</span>
                                </a>
                                <a href="@athlete.YouTubeUrl" target="_blank" title="Follow @athlete.Title on YouTube">
                                    <span class="icon font-ico-youtube"></span>
                                    <span class="sr-only">YouTube</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <form class="sw-atlete-form" action="" method="post">
                <label class="sr-only" for="sw-atlete-search">Pronadji atletu</label>
                <input type="text" id="sw-atlete-search" name="sw-atlete-search">
                <button class="btn btn-submit" type="submit">
                    <span class="sr-only">Pronadji atletu</span>
                    <span class="icon font-ico-search"></span>
                </button>
            </form>
        </div>
    </div>

    <div class="sw-crews cover-bg" style="background-image: url('/images/content/sw-crews-bg.jpg')">
        <div class="wrap">
            <div class="sw-crews-intro">
                <h2 class="centered">Street workout ekipe</h2>
                <p>
                    It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy.
                </p>
                <form class="sw-crews-form" action="" method="post">
                    <label class="sr-only" for="sw-crews-search">Pretraga gradova</label>
                    <input type="text" id="sw-crews-search" name="sw-crews-search" placeholder="Pretraga gradova">
                    <button class="btn btn-submit" type="submit">
                        <span class="sr-only">Pronadji grad</span>
                        <span class="icon font-ico-search"></span>
                    </button>
                </form>
            </div>
            <div class="sw-crews-list sw-crews-city-list">
                <div class="sw-crews-city-item">
                    <a href="javascript:;">
                        <h4>Beograd</h4>
                    </a>
                </div>
                <div class="sw-crews-city-item">
                    <a href="javascript:;">
                        <h4>Novi Sad</h4>
                    </a>
                </div>
                <div class="sw-crews-city-item">
                    <a href="javascript:;">
